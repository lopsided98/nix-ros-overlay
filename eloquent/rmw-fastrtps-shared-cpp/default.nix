{ lib, buildRosPackage, fetchurl, ament-cmake, ament-cmake-ros, ament-lint-auto, ament-lint-common, fastcdr, fastrtps, fastrtps-cmake-module, rcpputils, rcutils, rmw }:
buildRosPackage {
  pname = "ros-eloquent-rmw-fastrtps-shared-cpp";
  version = "0.8.1-r1";

