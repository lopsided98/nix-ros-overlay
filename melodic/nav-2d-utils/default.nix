    name = "0.2.5-1.tar.gz";
    sha256 = "8af155a85dbda95feb762385cd888cd2d9296f39e444549f51d99872303e5e20";
  };

  buildType = "catkin";
  checkInputs = [ roslint rostest rosunit ];
