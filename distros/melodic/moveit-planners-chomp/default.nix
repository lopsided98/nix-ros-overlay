  version = "1.0.3-r2";

  src = fetchurl {
    url = "https://github.com/ros-gbp/moveit-release/archive/release/melodic/moveit_planners_chomp/1.0.3-2.tar.gz";
    name = "1.0.3-2.tar.gz";
    sha256 = "e5511388a2fc552cde9b005d6499179cb9a4bae9528108d04437f5e0501c3922";
