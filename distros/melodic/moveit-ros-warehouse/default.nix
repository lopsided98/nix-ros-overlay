  version = "1.0.11-r1";

  src = fetchurl {
    url = "https://github.com/ros-gbp/moveit-release/archive/release/melodic/moveit_ros_warehouse/1.0.11-1.tar.gz";
    name = "1.0.11-1.tar.gz";
    sha256 = "2f3ab532edf1c7a9eb29d5b9e0579259f1b52e0587a02667ef5983ba0b38e7f8";
