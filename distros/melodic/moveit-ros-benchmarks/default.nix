  version = "1.0.3-r2";

  src = fetchurl {
    url = "https://github.com/ros-gbp/moveit-release/archive/release/melodic/moveit_ros_benchmarks/1.0.3-2.tar.gz";
    name = "1.0.3-2.tar.gz";
    sha256 = "79f40a97093eb0be0703290346e212737d4713420834516fc3386520a92df0d9";
