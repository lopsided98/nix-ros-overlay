  version = "2.5.1-r1";

  src = fetchurl {
    url = "https://github.com/clearpath-gbp/clearpath_common-release/archive/release/jazzy/clearpath_common/2.5.1-1.tar.gz";
    name = "2.5.1-1.tar.gz";
    sha256 = "be8e8ffe0cef5eafeb5fb95cf585f9aa4eb00f4270e1189f60b0351aaa89efd1";
  };

