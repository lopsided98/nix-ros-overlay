  pname = "ros-jazzy-mola-navstate-fuse";
  version = "1.2.1-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/mola-release/archive/release/jazzy/mola_navstate_fuse/1.2.1-1.tar.gz";
    name = "1.2.1-1.tar.gz";
