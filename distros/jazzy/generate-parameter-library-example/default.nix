    name = "0.3.9-1.tar.gz";
    sha256 = "8886c78048fdde62f20c83d9a4e2d2d74803402066aeccdb0a81328e941691c8";
  };

  buildType = "ament_cmake";
  buildInputs = [ ament-cmake ];
  checkInputs = [ ament-lint-auto ament-lint-common ];
