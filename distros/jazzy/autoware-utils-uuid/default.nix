  pname = "ros-jazzy-autoware-utils-uuid";
  version = "1.4.0-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/autoware_utils-release/archive/release/jazzy/autoware_utils_uuid/1.4.0-1.tar.gz";
    name = "1.4.0-1.tar.gz";
