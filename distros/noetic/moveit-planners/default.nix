  pname = "ros-noetic-moveit-planners";
  version = "1.1.7-r1";

  src = fetchurl {
    url = "https://github.com/ros-gbp/moveit-release/archive/release/noetic/moveit_planners/1.1.7-1.tar.gz";
    name = "1.1.7-1.tar.gz";
    sha256 = "d6f84486ed73c0a5b28fc39aeb6a6e7df8677a20fb070768da9dffe0bb9acead";
