    name = "0.15.8-1.tar.gz";
    sha256 = "0104415da88f7ddca607ee50fd19e118146dbb6a88fdaa63efa6b27b20450b4f";
  };

  buildType = "ament_cmake";
  buildInputs = [ ament-cmake ];
