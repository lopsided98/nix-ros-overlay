  pname = "ros-humble-examples-rclcpp-minimal-timer";
  version = "0.15.4-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/examples-release/archive/release/humble/examples_rclcpp_minimal_timer/0.15.4-1.tar.gz";
    name = "0.15.4-1.tar.gz";
