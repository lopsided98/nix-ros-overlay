    name = "0.9.0-2.tar.gz";
    sha256 = "9a94ada4caec5ad9997eefdeab6a22ac6ee622c0273dd17ef227eab667e1c4e4";
  };

  buildType = "ament_cmake";
  buildInputs = [ ament-cmake ];
