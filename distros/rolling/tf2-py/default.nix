    name = "0.33.1-1.tar.gz";
    sha256 = "9fb101025c95cb6dc0488c70f2274703ac49e3c3184c1eab540b7770fb445f2e";
  };

  buildType = "ament_cmake";
  buildInputs = [ ament-cmake python-cmake-module ];
