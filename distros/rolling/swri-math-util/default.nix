  pname = "ros-rolling-swri-math-util";
  version = "3.7.1-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/marti_common-release/archive/release/rolling/swri_math_util/3.7.1-1.tar.gz";
    name = "3.7.1-1.tar.gz";
