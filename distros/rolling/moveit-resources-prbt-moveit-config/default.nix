      fetchFromGithub {
        owner = "moveit";
        repo = "moveit2-release";
        rev = "release/rolling/moveit_resources_prbt_moveit_config/2.6.0-1";
        sha256 = "sha256-YpMtiyqDNaBxUp7GJ+ynuCrEcnwDagt9TFfsB02Q/J4=";
