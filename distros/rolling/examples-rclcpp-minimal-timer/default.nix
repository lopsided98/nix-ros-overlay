{ lib, buildRosPackage, fetchurl, ament-cmake, ament-lint-auto, ament-lint-common, rclcpp }:
buildRosPackage {
  pname = "ros-rolling-examples-rclcpp-minimal-timer";
  version = "0.21.2-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/examples-release/archive/release/rolling/examples_rclcpp_minimal_timer/0.21.2-1.tar.gz";
    name = "0.21.2-1.tar.gz";
    sha256 = "38a4315bb65081c85f46d77792b08257e94208bb19a3b250a70f90fd4adb3618";
